>div.{{style.article_block}}
	#onclick
	#style = border-bottom-color: {{color}};
	>div.{{style.title}}
		@click = open:{{name}}
		.{{title}}
	>div.{{style.time}}
		.{{displayDate}}
	>p.{{style.excerpt}}
		.{{excerpt}}
	>div.{{style.action_box}}
		>div.{{style.edit}}.{{style.btn}}.material-icons
			@click = editPost
			.edit
		>div.{{style.delete}}.{{style.btn}}.material-icons
			@click = deletePost
			.delete_forever
